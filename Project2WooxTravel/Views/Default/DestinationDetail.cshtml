@model Project2WooxTravel.Entities.Destination
@{
    ViewBag.Title = "DestinationDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <div id="detailSlider" class="carousel slide mb-4" data-bs-ride="carousel">
        <div class="carousel-inner">

            <div class="carousel-item active">
                <img src="@Model.ImageUrl" class="d-block w-100" style="height: 400px; object-fit: cover;" alt="@Model.Title">
            </div>
        </div>
    </div>


    <div class="row">

        <div class="col-md-6 mb-4">
            <div class="p-4 shadow-sm rounded border">
                <h3 class="fw-bold">@Model.Title</h3>
                <p class="text-muted">@Model.Country - @Model.City</p>
                <p><span class="badge bg-info text-dark">@Model.DayNight Gün -@(Model.DayNight-1)  Gece</span></p>
                <p class="mt-3">@Model.Description</p>
            </div>
        </div>


        <div class="col-md-6 mb-4">
            <div class="p-4 shadow-sm rounded border">
                <h4 class="fw-bold text-primary">Fiyat: @Model.Price ₺</h4>
                <p class="text-secondary">Kapasite: @Model.Capacity</p>
                <br />

                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Modal1">Rezervasyon Yap</button>
                @Html.Action("ReservationPopup", "Default")
            </div>
        </div>
    </div>
</div>